doctype html
html.no-js(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    meta(name='description', content='CapCrunch v#{locals.version}')
    title CapCrunch v#{locals.version}
    link(rel='stylesheet', href='css/core.css')
  body
    #main
      include partials/header.jade
      #app
        .wrap
          #roster-menu.area
            each i in [1,2,3,4,5,6]
              .panel Menu
          #roster.area
            .panel Forwards
            .panel Defense
            .panel Goalies
      include partials/footer.jade
    script(src='js/vendor/socket.io.min.js')
    script(src='js/vendor/react.min.js')
    script(src='js/vendor/jquery.min.js')
    script(src='js/app.js')
