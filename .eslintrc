{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true,
    "React": false,
    "socket": false,
    "io": false,
    "$": false,

    // Temp (ESLint JSX Bug)
    "App": false,
    "Team": false,
    "TeamMenu": true,
    "Payroll": true,
    "Roster": true,
    "RosterMenu": true,
    "Footer": true
  },
  "rules": {
    // Strict mode
    "strict": [2, "global"],

    // Code style
    "indent": [2, 2],
    "quotes": [2, "single"],

    // Preferences
    "no-mixed-requires": false,
    "no-multi-spaces": false,
    "no-unused-vars": false,
    "key-spacing": false,
    "no-trailing-spaces": false,
    "no-redeclare": false,
    "camelcase": false,
    "no-empty": false,
    "comma-spacing": false,
    "indent": false
  }
}
